<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HonestQuestionActivity" >

    <TextView
        android:id="@+id/honestQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="What do you like more, cats or dogs?" />

    <Button
        android:id="@+id/honestAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/honestQuestion"
        android:layout_below="@+id/honestQuestion"
        android:layout_marginTop="71dp"
        android:text="Cats"
        android:onClick="buttonPressed" />

    <Button
        android:id="@+id/honestAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/honestAnswer1"
        android:layout_alignBottom="@+id/honestAnswer1"
        android:layout_alignRight="@+id/honestQuestion"
        android:layout_marginRight="34dp"
        android:text="Dogs"
        android:onClick="buttonPressed" />

    <TextView
        android:id="@+id/feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/honestAnswer2"
        android:layout_marginTop="110dp"
        android:layout_toLeftOf="@+id/honestAnswer2"
        android:text="hÃ¤r kommer text" />

</RelativeLayout>